<%= render 'shared/navbar' %>
  <div class="my-5">
    <div class="card d-flex justify-content-center text-center align-items-column m-auto py-4" style="width: 600px">

      <h1>Edit a Listing</h1>
        <%= simple_form_for(@camera, html: { multipart: true }) do |f| %>
          <div class="form-inputs align-items-center m-auto pt-3 " style="width: 75%;">
            <% if @camera.errors.any? %>
              <div class="errors-container" style="color: red;">
                <tr>
                <% @camera.errors.full_messages.each do |message| %>
                  <td><%= message %></td>
                <% end %>
                </tr>
              </div>
            <% end %>
          </div>

          <div class="form-inputs align-items-center m-auto pt-3 " style="width: 75%;">
            <%= f.input :name,
                        label:'Title' %>
            <%= f.input :address %>
            <%=  f.input :category,
                  collection: ["Camera", "Lenses/Filters", "Camera Bag", "Tripod & Support", "Flash", "Lighting & Studio", "Batteries & Power Accessories", "Mobile Accessories", "Other Accessories"] %>
            <%= f.input :description %>
            <%= f.input :policies %>
            <%= f.input :price_per_day %>
            <hr class="mx-auto mt-4 mb-3" style="width: 75%;">
            <div class="mx-auto my-3" style="width: 50%;">
              <%= f.file_field :camera_photos, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, 'Update Listing', class: "button-color mt-3 mb-4", style: "width: 100%;"  %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
<%= render 'shared/footer' %>

