<%= render 'shared/navbar' %>
<div class="d-flex justify-content my-5">
  <div class="card justify-content-center text-center align-items-column m-auto py-4" style="width: 600px">
    <h1>Add a new Listing</h1>
    <%= simple_form_for(@camera, html: { multipart: true }) do |f| %>
      <div class="form-inputs align-items-center m-auto pt-3 " style="width: 75%;">
        <%= f.input :name,
                  label: false,
                  placeholder: 'Title' %>
        <%= f.input :address,
                  label: false,
                  placeholder: 'Address'%>
        <%= f.input :category,
                  collection: ["Camera", "Lenses/Filters", "Camera Bag", "Tripod & Support", "Flash", "Lighting & Studio", "Batteries & Power Accessories", "Mobile Accessories", "Other Accessories"],
                  multiple: :true,
                  include_blank: false,
                  label: false,
                  error: false  %>
        <%= f.input :description,
                  label: false,
                  placeholder: 'Description',
                  :as => :text,
                  :input_html => { 'rows' => 5, 'cols' => 10 } %>
        <%= f.input :policies,
                  label: false,
                  placeholder: 'Policies',
                  :as => :text,
                  :input_html => { 'rows' => 5, 'cols' => 10 } %>
        <%= f.input :price_per_day,
                  label: false,
                  placeholder: 'Price per day' %>
        <%= f.file_field :camera_photos, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" %>
        <hr class="mx-auto mt-4 mb-3" style="width: 75%;">
        <div class="mx-auto my-3" style="width: 50%;">
        </div>
        <div class="form-actions">
          <%= f.button :submit, 'Create listing' , class: "button-color mb-2", style: "width: 100%;" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>
