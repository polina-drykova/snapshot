<%= render 'shared/navbar' %>
<div class="my-5">
  <div class="card d-flex justify-content-center text-center align-items-column m-auto py-4" style="width: 450px">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs m-auto pt-3 " style="width: 75%;">
        <%= f.input :email,
                    label: false,
                    placeholder: 'email',
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: false,
                    placeholder: 'password',
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary mb-2", style: "width: 75%;" %>
      </div>
    <% end %>
    <hr class="mx-auto my-3" style="width: 75%;">

    <%= render "devise/shared/links" %>
  </div>
</div>
<%= render 'shared/footer' %>

