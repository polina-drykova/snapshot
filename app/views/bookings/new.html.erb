<%= render 'shared/navbar' %>
  <%= simple_form_for([@camera, @booking]) do |f| %>
    <% if @camera.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @camera.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-inputs">
      <%= f.input :rental_date %>
      <%= f.input :return_date %>
      <%= f.submit %>
    </div>
  <% end %>
<%= render 'shared/footer' %>
