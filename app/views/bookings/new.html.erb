<%= render 'shared/navbar' %>
<h1>Bookings#new</h1>
<p>Find me in app/views/bookings/new.html.erb</p>

<%= simple_form_for(@camera) do |f| %>

<% if @camera.errors.any? %>
<div class="errors-container">
  <ul>
    <% @camera.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :policies %>
    <%= f.input :price_per_day %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
<% end %>


<%= render 'shared/footer' %>
